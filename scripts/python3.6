#!/bin/bash

PYTHON_DOCKER_NAME=${PYTHON_DOCKER_NAME:-python3.6}
PYTHON_IMG=${PYTHON_IMG:-netshare:python3.6}
PYTHON_MOUNT_DIR=${PYTHON_MOUNT_DIR:-$PWD}

docker run -it --rm \
  --name $PYTHON_DOCKER_NAME \
  --network host \
  -v "$PYTHON_MOUNT_DIR":/home/annusmanarchitect/NetShare/ -w /home/annusmanarchitect/NetShare/ \
  -u $(id -u ${USER}):$(id -g ${USER}) \
  $PYTHON_IMG bash -c "$@"